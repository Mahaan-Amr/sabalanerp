{
  "name": "sabalanerp-backend",
  "version": "1.0.0",
  "description": "ERP Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/prisma/seed.ts",
    "migrate:legacy-customers:dry": "tsx scripts/migrate-legacy-customers-to-crm.ts",
    "migrate:legacy-customers:apply": "tsx scripts/migrate-legacy-customers-to-crm.ts --apply",
    "backfill:crm-customer-owners:dry": "tsx scripts/backfill-crm-customer-owners.ts",
    "backfill:crm-customer-owners:apply": "tsx scripts/backfill-crm-customer-owners.ts --apply"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "axios": "^1.13.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.22.1",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^22.15.0",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.7.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.57.0",
    "prisma": "^5.16.1",
    "tsx": "^4.7.1",
    "typescript": "^5.5.3"
  },
  "prisma": {
    "seed": "tsx src/prisma/seed.ts"
  }
}
